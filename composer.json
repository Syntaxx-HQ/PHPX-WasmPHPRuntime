{
    "name": "syntaxx/wasm-php-runtime",
    "description": "Prebuilt PHP WebAssembly runtime (php.wasm + php.js)",
    "type": "composer-plugin",
    "require": {
        "composer-plugin-api": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Syntaxx\\PhpWasm\\": "src/"
        }
    },
    "extra": {
        "class": "Syntaxx\\PhpWasm\\Plugin",
        "php-wasm": {
            "target-dir": "public/wasm"
        }
    }
}
